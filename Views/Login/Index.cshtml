@{
    Layout = null;
}
@model examenC_.Models.User

<!doctype html>
<html lang="en" data-bs-theme="auto">
  <head><script src="../assets/js/color-modes.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="generator" content="Hugo 0.112.5">
    <title>Login page</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/sign-in/">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/login.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet">


  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">

    
<main class="form-signin w-100 m-auto">

        @if (ViewData["erreur"] != null)
        {

            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content bg-danger text-white">
                        <div class="modal-header bg-danger">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Erreur </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                           Login ou Password incorrect !!!!
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-light text-danger" data-bs-dismiss="modal">Ok</button>
                        </div>
                    </div>
                </div>
            </div>

        }

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <h1 class="h3 mb-3 fw-normal">Gestion de Filiere</h1>

            <div class="form-floating">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", id = "floatingInput", placeholder = "login", type = "text" })
                @Html.LabelFor(model => model.Login)
            </div>
            <div class="form-floating">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", id = "floatingInput", placeholder = "password", type = "password" })
                @Html.LabelFor(model => model.Password)
            </div>

            <div class="form-check text-start my-3">
                Login: Admin && Password: Admin
            </div>

            <button class="btn btn-primary w-100 py-2" type="submit">Connexion</button>

        }

</main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/modal.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
